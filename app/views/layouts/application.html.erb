<!DOCTYPE html>
<html>
  <head>
    <title>CarRailsApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <h2>Cars App</h2>
  <%= link_to("Cars", cars_path)%>
  <%= link_to("Make A Car", new_car_path) %>
  <%= link_to("Most Expensive Car", expensive_car_path)%>
  <%= link_to("Makes", makes_path)%><br> 
  <%= link_to("Sign Up", signup_path)%>
  <%= link_to("Log In", login_path)%>
  <%= link_to("Log Out", '/logout', method: 'delete')%>
  <%= link_to("Users", users_path)%>
  <%= button_to("Log In With Google", '/auth/google_oauth2') %>


  <hr>

  <% if flash[:message] %>
      <div class="field_with_errors"><%= flash[:message] %></div>
    <% end %>

    <%= yield %>
  </body>
</html>
